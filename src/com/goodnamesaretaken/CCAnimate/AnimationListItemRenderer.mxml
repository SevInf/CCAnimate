<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				currentState="display" >
	
	<s:states>
		<s:State name="display" />
		<s:State name="edit" />
	</s:states>
	
	<fx:Script>
		<![CDATA[
			private function toggleEditing(e: Event): void {
				if (currentState == "edit") {
					data.name = editor.text;
					currentState = "display";
				} else {
					currentState = "edit";
				}
			}
		]]>
	</fx:Script>
	
	<s:Label text="{data.name}" excludeFrom="edit" click="toggleEditing(event)" />
	
	<s:TextInput id="editor" text="{data.name}" excludeFrom="display" focusOut="toggleEditing(event)" />
	
</s:ItemRenderer>
